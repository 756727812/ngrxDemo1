{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": false,
    "allowJs": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types/"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "src/",
    "paths": {
      "@shared": [ "app/shared" ],
      "@shared/*": [ "app/shared/*" ],
      "@utils": [ "app/utils/" ],
      "@utils/*": [ "app/utils/*" ],
      "@env": [ "environments/" ],
      "@env/*": [ "environments/*" ],
      "@store": [ "app/store" ],
      "@store/*": [ "app/store/*" ]
    }
  }
}
